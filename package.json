{
	"name": "webext-domain-permission-toggle",
	"version": "2.1.0",
	"description": "Browser-action context menu to request permission for the current tab. Chrome, Firefox, Safari.",
	"keywords": [
		"browser",
		"chrome",
		"safari",
		"extension",
		"dynamic",
		"register",
		"firefox",
		"permission",
		"ui",
		"webextension"
	],
	"repository": "fregante/webext-domain-permission-toggle",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"type": "module",
	"main": "index.js",
	"module": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "xo && tsc --noEmit",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"@typescript-eslint/no-implicit-any-catch": "off",
			"@typescript-eslint/restrict-template-expressions": "off",
			"no-alert": "off"
		}
	},
	"dependencies": {
		"webext-additional-permissions": "^2.0.1",
		"webext-detect-page": "^2.0.6",
		"webext-content-scripts": "^0.10.0",
		"webext-patterns": "^1.0.0",
		"webext-polyfill-kinda": "^0.0.2",
		"webext-tools": "^0.1.0"
	},
	"devDependencies": {
		"@babel/core": "^7.12.13",
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/chrome": "0.0.129",
		"@types/firefox-webext-browser": "^82.0.0",
		"typescript": "^4.1.3",
		"xo": "^0.37.1"
	},
	"webExt": {
		"sourceDir": "demo/dist"
	}
}
