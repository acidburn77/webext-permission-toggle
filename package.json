{
	"name": "webext-domain-permission-toggle",
	"version": "1.1.0",
	"description": "Browser-action context menu to request permission for the current tab.",
	"keywords": [
		"browser",
		"chrome",
		"extension",
		"firefox",
		"permission",
		"ui",
		"webextension"
	],
	"repository": "fregante/webext-domain-permission-toggle",
	"license": "MIT",
	"author": "Federico Brigante <opensource@bfred.it> (bfred.it)",
	"module": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "xo && tsc --noEmit",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"@typescript-eslint/no-implicit-any-catch": "off",
			"@typescript-eslint/restrict-template-expressions": "off",
			"no-alert": "off"
		}
	},
	"dependencies": {
		"webext-additional-permissions": "^1.1.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/chrome": "0.0.127",
		"@types/firefox-webext-browser": "^82.0.0",
		"typescript": "^4.1.3",
		"xo": "^0.37.1"
	}
}
